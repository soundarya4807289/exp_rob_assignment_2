<?xml version="1.0" ?>
<robot name="ex3" xmlns:xacro="https://www.ros.org/wiki/xacro" >
    

 <!-- xacro:include filename="$(find robot1_description)/urdf/materials.xacro" /-->
 <xacro:include filename="$(find exp_assignment2)/urdf/ex3_arm.gazebo" />

 <xacro:macro name="cylinder_inertia" params="mass r l"> 
    <inertia ixx="${mass*(3*r*r+l*l)/12}" ixy = "0" ixz = "0"
                iyy="${mass*(3*r*r+l*l)/12}" iyz = "0" izz="${mass*(r*r)/2}" /> 
 </xacro:macro>

    <xacro:macro name="link_wheel" params="name">
        <link name="${name}">
            <inertial>
              <mass value="0.2"/>
              <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
              <inertia ixx="0.000526666666667" ixy="0" ixz="0" iyy="0.000526666666667" iyz="0" izz="0.001"/>
            </inertial>
            <collision name="link_right_wheel_collision">
              <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
              <geometry>
                <cylinder length="0.04" radius="0.1"/>
              </geometry>
            </collision>
            <visual name="${name}_visual">
              <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
              <geometry>
                <cylinder length="0.04" radius="0.1"/>
              </geometry>
            </visual>
        </link>
    </xacro:macro>
 
    <xacro:macro name="joint_wheel" params="name child origin_xyz">
      <joint name="${name}" type="continuous">
        <origin rpy="0 0 0" xyz="${origin_xyz}"/>
        <child link="${child}"/>
        <parent link="base_link"/>
        <axis rpy="0 0 0" xyz="0 1 0"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
      </joint>
    </xacro:macro>


  
  <link name="base_link">
    <!-- pose and inertial -->
    <pose>0 0 0.1 0 0 0</pose>
    
    <inertial>
      <mass value="5"/>
      <origin rpy="0 0 0" xyz="0 0 0.1"/>
      <inertia ixx="0.0395416666667" ixy="0" ixz="0" iyy="0.106208333333" iyz="0" izz="0.106208333333"/>
    </inertial>
    
    <collision name="collision_chassis">
      <geometry>
        <box size="0.5 0.3 0.07"/>
      </geometry>
    </collision>
    
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.5 0.3 0.07"/>
      </geometry>
      <material name="blue"/>
    </visual>
    
    <!-- caster front -->
    <collision name="caster_front_collision">
      <origin rpy=" 0 0 0" xyz="0.35 0 -0.05"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>
    <visual name="caster_front_visual">
      <origin rpy=" 0 0 0" xyz="0.2 0 -0.05"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </visual>
    </link>
  
  <!-- Create wheels -->  

  <xacro:link_wheel name="link_right_wheel" />
  <xacro:link_wheel name="link_left_wheel" />
  <xacro:joint_wheel name="joint_right_wheel"  child="link_right_wheel"  origin_xyz="-0.05 0.15 0"  />
  <xacro:joint_wheel name="joint_left_wheel"   child="link_left_wheel"   origin_xyz="-0.05 -0.15 0"  />

  <!--arm definition -->

  <link name="arm_base_link">
  	<inertial>
  		<mass value="0.5"/>
  		<origin xyz="0 0 0" rpy="0 0 0" />
  		<inertia ixx="0.0000416666667" ixy="0" ixz="0" iyy="0.0000416666667" iyz="0" izz="0.0000416666667"/>
  	</inertial>
  	<collision>
  	  <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.2"/>
      </geometry>
  	</collision>
  	<visual>
  	  <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.2"/>
      </geometry>
      <material name="grey" />
  	</visual>
  </link>

  <joint name="arm_base_to_base" type="fixed">
  	<origin rpy="0 0 0" xyz="0.2 0 0.135"/>
  	<parent link="base_link"/>
  	<child link="arm_base_link"/>
  </joint>

  <link name="arm_link_01">
  	<inertial>
  		<mass value="0.025"/>
  		<origin xyz="0 0 0" rpy="0 0 0" />
  		<inertia ixx="0.000010279" ixy="0" ixz="0" iyy="0.000010279" iyz="0" izz="0.000007225"/>
  	</inertial>
  	<collision>
  	  <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.3"/>
      </geometry>
  	</collision>
  	<visual>
  	  <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.3"/>
      </geometry>
      <material name="red" />
  	</visual>
  </link>

  <joint name="arm_joint_01" type="revolute">
  	<axis xyz="0 0 1"/>
  	<limit effort="1000.0" lower="-3.14" upper="3.14" velocity="0.2"/>
  	<origin rpy="0 0 0" xyz="0 0 0.25"/>
  	<parent link="arm_base_link"/>
  	<child link="arm_link_01"/>
  </joint>


  <!-- Camera Link-->
  <link name="camera_link">
   	<collision>
      <origin xyz="0.0 0 0" rpy="0 0 0"/>
      <geometry>
	<box size="0.1 0.05 0.05"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0.0 0 0" rpy="0 0 0"/>
      <geometry>
	<box size="0.1 0.05 0.05"/>
      </geometry>
      <material name="white">
	<color rgba="1 0 0 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="1e-5" />
      <origin xyz="0.0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial> 
  </link>

  <joint name="camera_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0.025 0 0.175" rpy="0 0 0"/>
    <parent link="arm_link_01"/>
    <child link="camera_link"/>
  </joint>

  <transmission name="arm_joint_01_trans">
	<type>transmission_interface/SimpleTransmission</type>
	<joint name="arm_joint_01">
		<hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
	</joint>
	<actuator name="motor1">
		<hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
		<mechanicalInterface>1</mechanicalInterface>
	</actuator>
  </transmission>


  </robot>
